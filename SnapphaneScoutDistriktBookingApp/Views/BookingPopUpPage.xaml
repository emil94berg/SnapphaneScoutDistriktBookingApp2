<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnapphaneScoutDistriktBookingApp.Views.BookingPopUpPage"
             Title="BookingPopUpPage">
    <VerticalStackLayout>
        <Label 
            Text="Information om bokningen"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="{Binding Name, StringFormat='Namn på kund: {0}'}"></Label>
        <Label Text="{Binding Email, StringFormat='Email: {0}'}"></Label>
        <Label Text="{Binding StartDate, StringFormat='Startdatum: {0}'}" ></Label>
        <Label Text="{Binding EndDate, StringFormat='Slutdatum: {0}'}" ></Label>
        <Label Text="{Binding Phone, StringFormat='Telefonnummer: {0}'}" ></Label>
        <Label Text="{Binding OrgName, StringFormat='Tillhörande orginisation: {0}'}" ></Label>
        <Label Text="{Binding BookingType, StringFormat='Vill boka: {0}'}"></Label>
        <Label Text="{Binding NumberOfCanoes, StringFormat='Antal kanoter: {0}'}" ></Label>
        <Label Text="{Binding NumberOfCabin, StringFormat='Stuga: {0}'}"></Label>
        <Label Text="{Binding NumberOfLeanTo, StringFormat='Antal Vindskydd: {0}'}" ></Label>
        <Label Text="{Binding NumberOfCampground, StringFormat='Antal personer på lägerområdet: {0}'}"></Label>
    </VerticalStackLayout>
</ContentPage>