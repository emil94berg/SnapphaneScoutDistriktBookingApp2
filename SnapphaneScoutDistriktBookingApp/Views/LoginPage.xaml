<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnapphaneScoutDistriktBookingApp.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Namn" FontSize="18"/>
        <Entry x:Name="NameEntry" Placeholder="Ditt namn"/>

        <Label Text="Email" FontSize="18"/>
        <Entry x:Name="EmailEntry" Placeholder="Din email" Keyboard="Email"/>

        <Button Text="Spara information" Clicked="OnLoginClicked"/>
    </VerticalStackLayout>
</ContentPage>